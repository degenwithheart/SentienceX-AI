# Backend settings (read from environment variables prefixed with `SENTIENCEX_`).
# Copy to `.env` and `source` it in your shell if you want file-based config.

# Storage / locale
SENTIENCEX_DATA_DIR=./data
SENTIENCEX_LOCALE=en

# Server bind
SENTIENCEX_HOST=0.0.0.0
SENTIENCEX_PORT=8000

# Networking
SENTIENCEX_TRUSTED_HOSTS=localhost,127.0.0.1
SENTIENCEX_CORS_ORIGINS=http://localhost:3000

# Rate limiting (optional Redis)
SENTIENCEX_RATE_LIMIT_ENABLED=true
SENTIENCEX_RATE_LIMIT_RPM=60
SENTIENCEX_REDIS_URL=redis://localhost:6379/0

# Training scheduler
SENTIENCEX_TRAINING_ENABLED=true
SENTIENCEX_TRAINING_TRAIN_DIR=./TRAIN
SENTIENCEX_TRAINING_RUN_ON_STARTUP=false
SENTIENCEX_TRAINING_NIGHTLY=false
SENTIENCEX_TRAINING_NIGHTLY_HOUR=3
SENTIENCEX_TRAINING_NIGHTLY_MINUTE=15

# Chat/runtime behavior
SENTIENCEX_STM_TURNS=18
SENTIENCEX_MAX_REPLY_CHARS=800
SENTIENCEX_PROACTIVE_MIN_TURN_GAP=6
SENTIENCEX_PROACTIVE_MIN_HOURS_GAP=12

# Classifier thresholds
SENTIENCEX_DISTRESS_HIDDEN_THRESHOLD=0.62
SENTIENCEX_THREAT_THRESHOLD=0.70

# Data subfolders (relative to `SENTIENCEX_DATA_DIR`)
SENTIENCEX_TEMPLATES_DIR_NAME=templates
SENTIENCEX_LEXICONS_DIR_NAME=lexicons
